{
  "manifest_version": 3,
  "name": "Auido Visualizer",
  "version": "2.0",
  "description": "Captures tab audio, shows visuals, keeps sound playing. [m] key to change modes.",
  "permissions": ["tabCapture", "activeTab", "offscreen"],
  "background": { "service_worker": "background.js" },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "icons": { "128": "icon.png" }
}
