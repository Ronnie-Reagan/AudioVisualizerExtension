{
  "update_url": "https://clients2.google.com/service/update2/crx",

  "manifest_version": 3,
  "name": "Audio Visualizer",
  "version": "3.1",
  "description": "Captures tab audio, shows visuals, keeps sound playing.",
  "permissions": ["tabCapture", "activeTab", "sidePanel"],

  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_popup": "/popup_system/popup.html",
    "default_icon": "audiovisualizer_logo_128.png"
  },

  "side_panel": {
    "default_path": "/sidepanel_system/sidepanel.html"
  },

  "icons": {
    "128": "audiovisualizer_logo_128.png"
  },

  "web_accessible_resources": [
    {
      "resources": [
        "visualizer_system/draw/visualizer-assets/halo/earth.png"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
