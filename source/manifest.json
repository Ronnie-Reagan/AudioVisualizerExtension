{
  "manifest_version": 3,
  "name": "Audio Visualizer",
  "version": "3.0",
  "description": "Captures tab audio, shows visuals, keeps sound playing. Press [M] to change modes.",
  "permissions": ["tabCapture", "activeTab", "offscreen", "sidePanel"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "/popup_system/popup.html",
    "default_icon": "audiovisualizer_logo_128.png"
  },
  "side_panel": {
    "default_path": "/sidepanel_system/sidepanel.html"
  },
  "icons": {
    "128": "audiovisualizer_logo_128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
